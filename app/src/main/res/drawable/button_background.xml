<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#0072bc" /> <!-- Set the background color to blue when pressed -->
            <corners android:radius="10dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Set the background color to white by default -->
            <corners android:radius="10dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
</selector>
